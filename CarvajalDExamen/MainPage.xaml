<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarvajalDExamen.MainPage">

    <ScrollView>

        <StackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <Label Text="Bienvenido a la app de David Carvajal"
               FontSize="28"
               HorizontalOptions="Center" />

            <Image Source="shenanigans.png"
               HeightRequest="150"
               WidthRequest="150"
               HorizontalOptions="Center" />

            <Button Text="Ir a Chistes"
                Grid.Row="1"
                Grid.Column="1"
                TextColor="Yellow"
                BackgroundColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="Chistes" />
            <Button Text="Sobre mí"
                Grid.Row="1"
                Grid.Column="1"
                TextColor="Yellow"
                BackgroundColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="SobreMi" />
        </StackLayout>
    </ScrollView>
</ContentPage>
